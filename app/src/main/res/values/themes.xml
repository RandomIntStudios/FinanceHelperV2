<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.FinanceHelperV2" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="windowActionBar">false</item>
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/pink</item>
        <item name="colorPrimaryVariant">@color/dark_pink</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/pink</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimary</item>
        <!--<item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item> -->
        <!-- Customize your theme here. -->
    </style>
    <style name="Widget.financehelperv2.FloatingActionButton" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="android:foregroundTint">@color/pink</item>
        <item name="elevation">0dp</item>
        <item name="borderWidth">3dp</item>
    </style>

    <style name="financehelper_inc_red_button" parent="TextAppearance.MaterialComponents.Button">
        <item name="tint">@color/black</item>
        <item name="backgroundTint">@color/transparent</item>
        <item name="android:shadowColor">@color/transparent</item>
    </style>
    <style name="dateChangeButton" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:foregroundTint">@color/pink</item>
        <item name="elevation">0dp</item>
    </style>
</resources>