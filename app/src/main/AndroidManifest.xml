<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.ristudios.financehelperv2">
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED"/>
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.FinanceHelperV2">
        <activity android:name=".ui.activities.MonthlyOverviewActivity" android:parentActivityName=".ui.activities.BudgetActivity"/>
        <activity android:name=".ui.activities.CalendarDayActivity" android:parentActivityName=".ui.activities.BudgetActivity"/>
        <activity android:name=".ui.activities.InfoActivity" android:parentActivityName=".ui.activities.BudgetActivity"/>
        <activity android:name=".ui.activities.SettingsActivity" android:parentActivityName=".ui.activities.BudgetActivity"/>
        <activity android:name=".ui.activities.CalendarActivity" android:parentActivityName=".ui.activities.BudgetActivity"/>
        <activity android:name=".ui.activities.BudgetActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <receiver android:name=".utils.Alarm">
                <intent-filter>
                    <action android:name="com.ristudios.financehelperv2.BUDGET_RESET"/>
                    <action android:name="android.intent.action.BOOT_COMPLETED"/>
                    <action android:name="android.intent.action.LOCKED_BOOT_COMPLETED"/>
                </intent-filter>
        </receiver>
        <activity android:name=".ui.activities.BaseActivity" />
    </application>


</manifest>